{
  "name": "shell",
  "version": "0.8.4",
  "author": "David Worms <david@adaltas.com> (https://www.adaltas.com)",
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    }
  },
  "contributors": [
    "Sergei Kudinov <sergei@adaltas.com> (https://www.adaltas.com)"
  ],
  "dependencies": {
    "mixme": "^0.3.5",
    "pad": "^3.2.0"
  },
  "devDependencies": {
    "coffeescript": "^2.5.1",
    "mocha": "^8.2.1",
    "should": "^13.2.3"
  },
  "description": "Command line arguments parser and stringifier",
  "engines": {
    "node": ">= 0.10.x"
  },
  "files": [
    "/lib"
  ],
  "homepage": "https://github.com/adaltas/node-shell",
  "keywords": [
    "argument",
    "arg",
    "parameter",
    "param",
    "option",
    "command",
    "cli",
    "getopt",
    "parser"
  ],
  "license": "MIT",
  "main": "./lib/index",
  "mocha": {
    "throw-deprecation": true,
    "require": [
      "should",
      "coffeescript/register"
    ],
    "inline-diffs": true,
    "timeout": 40000,
    "reporter": "spec",
    "recursive": true
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/adaltas/node-shell.git",
    "directory": "packages/shell"
  },
  "scripts": {
    "preversion": "yarn run test",
    "build": "coffee -b -o lib src",
    "pretest": "yarn run build",
    "test": "mocha 'test/**/*.coffee'"
  }
}
