{
  "name": "shell",
  "version": "0.9.3",
  "author": "David Worms <david@adaltas.com> (https://www.adaltas.com)",
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    }
  },
  "contributors": [
    "Sergei Kudinov <sergei@adaltas.com> (https://www.adaltas.com)"
  ],
  "dependencies": {
    "mixme": "^0.5.4",
    "pad": "^3.2.0",
    "plug-and-play": "^2.4.0"
  },
  "devDependencies": {
    "coffeescript": "^2.6.1",
    "mocha": "^9.2.1",
    "rollup": "^2.67.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "should": "^13.2.3"
  },
  "description": "Command line arguments parser and stringifier",
  "engines": {
    "node": ">= 0.10.x"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./routes/help": {
      "import": "./dist/esm/routes/help.js",
      "require": "./dist/cjs/routes/help.cjs"
    }
  },
  "files": [
    "/dist",
    "/lib"
  ],
  "homepage": "https://github.com/adaltas/node-shell",
  "keywords": [
    "argument",
    "arg",
    "parameter",
    "param",
    "option",
    "command",
    "cli",
    "getopt",
    "parser"
  ],
  "license": "MIT",
  "main": "./lib/index",
  "mocha": {
    "throw-deprecation": true,
    "require": [
      "should"
    ],
    "inline-diffs": true,
    "loader": "./test/loaders/coffee.js",
    "timeout": 10000,
    "reporter": "spec",
    "recursive": true
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/adaltas/node-shell.git",
    "directory": "packages/shell"
  },
  "scripts": {
    "build": "npx rollup -c",
    "preversion": "yarn run test",
    "pretest": "npm run build",
    "test": "mocha 'test/**/*.coffee'"
  },
  "type": "module"
}
